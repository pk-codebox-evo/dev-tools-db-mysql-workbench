    <Property Id="CPP_2015_REDISTRIBUTABLE_1">
      <RegistrySearch Id="Cpp2015Redistributable1"
                      Root="HKLM"
                      Key="SOFTWARE\WOW6432Node\Microsoft\VisualStudio\14.0\VC\Runtimes\x64"
