    <Property Id="OLDINSTALLDIR">
		  <RegistrySearch Id="OldMySQLWBLocation" Type="raw" Root="HKLM" Key="Software\MySQL AB\$(var.OLD_PRODUCT_NAME)" Name="Location" />
